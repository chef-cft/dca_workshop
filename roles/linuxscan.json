{
  "name": "linuxscan",
  "description": "set & test compliance profile for linux nodes",
  "json_class": "Chef::Role",
  "default_attributes": {
    "chef_client": {
      "interval": 120,
      "splay": 60
    }
  },
  "override_attributes": {
    "audit": {
      "reporter": "chef-server-automate",
      "fetcher": "chef-server-automate",
      "insecure": false,
      "profiles": [
        {
          "name": "linux-baseline",
          "compliance": "workstation-1/linux-baseline"
        }
      ]
    }
  },
  "chef_type": "role",
  "run_list": [
    "recipe[chef-client::default]",
    "recipe[audit]"
  ],
  "env_run_lists": {

  }
